---
import { Image } from "astro:assets"
interface Props {
  url?: string
  img?: any
  title?: string
  desc?: string
  techstack?: string[]
  type?: string
  children?: HTMLElement | HTMLElement[]
}

const {
        url,
        id,
        img       = "https://fakeimg.pl/640x360",
        title     = "Default title",
        desc      = "Default description",
        techstack = ["react"],
        type      = "article"
      } = Astro.props
---

<div class="card">

    <div class="card__content">
        <div class="card__content--techstack">
          { techstack.map((tech) =>
                  <Image src={ `/logo/${ tech.toLowerCase() }.svg` } alt={ tech } width="64"
                         height="64" transition:name={ `hero-tech-${ tech }-${ id }` }/>
          ) }
        </div>
        <h2 transition:name={ `hero-title-${ title }` }>
            <a class={ url? "": "disabled-link" } href={ url }>{ title }</a>
        </h2>
        <p class="italic">
          { type }
        </p>
        <p>
          { desc }
        </p>
    </div>

    <div class="card__image">
        <Image src={ img } alt="" width="640" height="360" format="webp" transition:name={ `hero-image-${ title }` }/>
    </div>

</div>

<style>
  .card {
    display        : flex;
    flex-direction : column;
    border-radius  : 3px;
    width          : 256px;
    min-height     : 100%;
    position       : relative;
    overflow       : hidden;
  }

  .card:focus-within {
    outline : 1px solid var(--contrastTextColor2);
    border  : transparent;
  }

  .card:focus-within a:focus {
    text-decoration : none;
    box-shadow      : none;
    outline         : none;
  }

  .card__image {
    height : 10rem;
  }

  .card__image img {
    height     : 100%;
    width      : 100%;
    object-fit : cover;
    filter     : blur(3px) opacity(.2);
    transition : filter .2s ease-in-out;
  }

  .card__content {
    display        : flex;
    flex-direction : column;
    flex-grow      : 1;
    padding        : 1rem;
    position       : absolute;
    z-index        : 4;
    height         : 100%;
    width          : 100%;
  }

  .card__content:hover + .card__image img {
    filter : blur(1px) opacity(.2);
  }

  .card__content a {
    text-decoration : none;
  }

  .card__content a:focus {
    text-decoration : underline;
  }

  .card__content a::after {
    content  : '';
    position : absolute;
    inset    : 0;
  }

  .card__content:last-child {
    margin-top  : auto;
    padding-top : 2rem;
  }

  .card__content--techstack {
    display         : flex;
    justify-content : flex-start;
    align-items     : center;
  }

  .card__content--techstack img {
    width  : 32px;
    height : 32px;
  }
</style>