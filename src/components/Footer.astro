---
import Socials from "./Socials.astro";
import {Image} from "astro:assets"

const menuItems = [
  {
    title: "Mon CV",
    path: "/cv",
  }
];
---

<hr />
<footer>

    <ul class="list-inline">
        {
            menuItems.map((item) => (
                <li class="list-inline-item">
                    <a href={item.path}>{item.title}</a>
                </li>
            ))
        }
    </ul>

    <section class="footer-cards">

        <div class="footer-card">
            <p class="footer-card__title">Email</p>
            <p class="card-info">billyklotz789@gmail.com</p>
        </div>

        <div class="footer-card">
            <p class="footer-card__title">Restez connect√©!</p>
            <Socials/>
        </div>

    </section>



</footer>

<style>
  footer {
      max-width: 1196px;
      margin   : auto auto 1rem;
  }

  .footer-cards {
    display: flex;
    flex-direction: column;
    gap: 0.5em;
  }

  .footer-card {
    padding-block: 4em;
    background: #F3F3F3;

    flex-grow: 1;
    flex-basis: 0;

    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
  }

  .footer-card__title {
    font-size: 1.3em;
    margin-block: 0.6em;
    text-decoration: underline;
  }

  .card-info {
    margin-block: 0.1em;
  }

  footer ul {
    padding: 0;
    list-style: none;
    text-align: center;
    margin-block: 4em;
  }

  footer li {
    padding: 0 0.7em;
    margin-block: 0.4em;
  }

  hr {
    width: 95%;
    margin: 5em auto 3em;
    color: #333333;
  }


  @media screen and (min-width: 500px) {
    .footer-cards {
      display: flex;
      flex-direction: row;
    }
  }
</style>