---
import Layout          from "./Layout.astro"
import Breadcrumbs     from "../components/shared/Breadcrumbs.astro";
import BreadcrumbsItem from "../components/shared/BreadcrumbsItem.astro";
import { Image }       from "astro:assets"

interface Props {
  titre: string;
  description: string;
  blogTitle: string;
  src: any;
  alt: string;
  techstack:string[]
}

const { titre, description, blogTitle, src, alt, techstack } = Astro.props;
---

<Layout titre={ titre } description={ description }>
    <main transition:animate="fade">
        <Breadcrumbs>
            <BreadcrumbsItem
                    href="/portfolio-astro/"
                    label="Page d'accueil"
            />
            <BreadcrumbsItem
                    href="/portfolio-astro/projets"
                    label="Mes projets"
            />
            <BreadcrumbsItem
                    currentPage={ true }
                    label={ titre }
            />
        </Breadcrumbs>
        <article>
            <section class="hero">
                <div class="tag" transition:name={ `hero-tech-${ titre }` }>
                    { techstack.map((tech) => {
                        return (
                            <Image src={ `/portfolio-astro/logo/${ tech.toLowerCase() }.svg` } alt={ tech } width="64"
                                   height="64"></Image>
                        )
                    }) }
                </div>
                <h1 transition:name={ `hero-title-${ titre }` }>{ blogTitle }</h1>
                <Image
                    src={ src }
                    alt={ alt }
                    width="1280"
                    height="720"
                    format="webp"
                    loading="eager"
                    class="hero-image"
                    transition:name={ `hero-image-${ titre }` }
                />
            </section>
            <section class="text">
                <slot/>
            </section>
        </article>
    </main>
</Layout>

<style>
  main {
    width   : min(100%, 1196px);
    margin  : auto;
    padding : .5em;
  }
  .hero {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      gap: 1em;

      margin-block : 2em;
  }
  .hero-image {
      height: 150px;
      object-fit: cover;
      object-position: top left;
  }
  .tag {
      color: whitesmoke;
      text-decoration: none;
      padding: 0.1em 0.4em;
      font-size: 1rem;
      border-radius: 3px 3px 0 0;

      display         : flex;
      justify-content : flex-start;
      align-items     : center;
  }
  .tag img {
      width: 32px;
      height: 32px;
  }

  h1 {
    font-size : 2em;
    color     : #444;
  }

  @media only screen and (min-width: 400px){
      .tag img {
          width: 48px;
          height: 48px;
      }
      .hero-image {
          height: 250px;
      }
  }

  @media only screen and (min-width: 600px) {
      .hero-image {
          height: 350px;
      }
  }
  @media only screen and (min-width: 900px) {
      .hero-image {
          height: 450px;
      }
  }
</style>